<h1>Update <%=@question.question_name() %> Question </h1>

<form action="/questions/<%= @question.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="question_name"> Edit the question: </label>
  <input id="question_name" name="question_name" type"text">

  <button type="submit" class="btn btn-sm btn-success">Update</button>
</form>

<form action="/questions/<%= @question.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class"btn btn-sm btn-danger"> Delete question </button>
</form>

<p><a href="/">Return to Main Page</a></p>
