<h1>Update <%=@survey.survey_name() %> Survey </h1>

<form action="/surveys/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="survey_name"> Edit Survey name: </label>
  <input id="survey_name" name="survey_name" type="text">

  <button type="submit" class="btn btn-sm btn-primary">Update</button>
</form>

<form action="/surveys/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class"btn btn-sm btn-danger"> Delete Survey </button>
</form>

<p><a href="/"> Return to Main Page</a></p>
